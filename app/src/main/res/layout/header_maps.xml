<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left Side: Boxes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Flood Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_flood"
                            android:contentDescription="Flood Icon"
                            android:tint="@color/white" />
                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_flood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_flood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Flood"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Landslide Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_landslide"
                            android:contentDescription="Landslide Icon"
                            android:tint="@color/white" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_landslide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_landslide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Landslide"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Fire Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_house_fire"
                            android:contentDescription="Fire Icon"
                            android:tint="@color/white" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_fire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="67"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_fire"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Fire"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- State District Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_maps_point"
                            android:contentDescription="State District Icon"
                            android:tint="@color/white" />

                        <!-- Numbers Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Number State -->
                            <TextView
                                android:id="@+id/number_state"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center" />

                            <!-- Number District -->
                            <TextView
                                android:id="@+id/number_district"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="34"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Labels Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Label State -->
                            <TextView
                                android:id="@+id/text_state"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="1sp" />

                            <!-- Label District -->
                            <TextView
                                android:id="@+id/text_district"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="District"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="1sp" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Family Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_family"
                            android:contentDescription="Family Icon"
                            android:tint="@color/white" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_family"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="89"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_family"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Family"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Injuries Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_injuries"
                            android:contentDescription="Injuries Icon"
                            android:tint="@color/white" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_injuries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_injuries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Injuries"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Fatality Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fatality"
                            android:contentDescription="Fatality Icon"
                            android:tint="@color/white" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_fatality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_fatality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Fatality"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- PPS Active Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_pps_active"
                            android:contentDescription="PPS Active Icon"
                            android:tint="@color/white" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/number_pps_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <!-- Text -->
                        <TextView
                            android:id="@+id/text_pps_active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="PPS Active"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="none"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="8sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Right Side: Icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings Icon"
                android:tint="@color/colorPrimary" />

            <!-- Spacer -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp" />

            <!-- Information Icon -->
            <ImageView
                android:id="@+id/icon_information"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_info"
                android:contentDescription="Information Icon"
                android:tint="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
