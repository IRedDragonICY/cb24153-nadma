<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#CCE0FF"
              android:padding="16dp">

    <!-- Welcome Header -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

    <!-- NADMA Logo -->
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_nadma_logo"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

    <!-- Map of Malaysia -->
    <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/map_malaysia"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

    <!-- NADMA Title -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NADMA"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

    <!-- Description -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore detailed information on disaster management, emergency response protocols, and financial assistance. Stay updated with the latest news, alerts, and preventive measures to ensure your safety and well-being during critical times."
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

    <!-- Get Started Button -->
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Started"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#0057A8"
                    android:padding="12dp"
                    android:layout_gravity="center"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By tapping 'Get Started,' you acknowledge that you have read and agree to our Terms of Service."
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>

            <!-- Icons Row -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="8dp">

                <!-- Repeat your ImageViews as needed -->
                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_who"/>

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_jupem"
                        android:layout_marginStart="8dp"/>

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_jps"
                        android:layout_marginStart="8dp"/>

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_jas"
                        android:layout_marginStart="8dp"/>

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_mmd"
                        android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_moh"
                        android:layout_marginStart="8dp"/>

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_jkr"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>