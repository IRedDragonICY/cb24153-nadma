<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/hello_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello User!"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/signin_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in for better personalization"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/profile_section">

        <TextView
            android:id="@+id/notification_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Notification"
            android:drawableEnd="@drawable/ic_forward"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/theme_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Theme"
            android:drawableEnd="@drawable/ic_forward"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/report_bug_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Report bug and Suggestion"
            android:drawableEnd="@drawable/ic_forward"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/terms_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Terms of Service"
            android:drawableEnd="@drawable/ic_forward"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/about_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="About"
            android:drawableEnd="@drawable/ic_forward"
            android:drawablePadding="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
