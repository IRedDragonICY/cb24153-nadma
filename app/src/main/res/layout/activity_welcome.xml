<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE0FF"
    tools:context=".WelcomeActivity">

    <!-- Get Started CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

        <!-- NADMA Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_nadma_logo"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Map of Malaysia -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/map_malaysia"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- NADMA Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NADMA"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore detailed information on disaster management, emergency response protocols, and financial assistance."
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="4dp"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Get Started Button -->
            <Button
                android:id="@+id/getStartedButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By tapping 'Get Started,' you acknowledge that you have read and agree to our Terms of Service."
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

            <!-- App Management Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app managed by government"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- Gov Icons -->
            <include layout="@layout/gov_icons"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
